{
	"name": "astro-eslint-setup",
	"version": "1.0.2",
	"description": "Set up ESLint automatically for Astro with TypeScript",
	"main": "index.js",
	"scripts": {
		"start": "tsup && node dist/index.mjs",
		"build": "tsup",
		"lint": "biome lint",
		"format": "biome format --write"
	},
	"bin": {
		"astro-eslint-setup": "dist/index.mjs"
	},
	"files": [
		"dist/**/*"
	],
	"keywords": [
		"eslint",
		"astro",
		"eslint-config",
		"typescript",
		"linting",
		"setup",
		"cli",
		"eslint-plugin",
		"astro-eslint",
		"typescript-eslint",
		"jsx-a11y",
		"accessibility",
		"a11y",
		"configuration",
		"automation"
	],
	"homepage": "https://github.com/danielz0102/astro-eslint-setup",
	"author": "danielz0102",
	"license": "ISC",
	"packageManager": "pnpm@10.17.1",
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@types/node": "24.3.0",
		"semantic-release": "24.2.9",
		"tsup": "8.5.0",
		"typescript": "5.9.2"
	},
	"dependencies": {
		"@clack/prompts": "0.11.0"
	}
}
