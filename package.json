{
	"name": "astro-eslint-setup",
	"version": "0.0.6",
	"description": "Set up ESLint automatically for Astro with TypeScript",
	"main": "index.js",
	"scripts": {
		"start": "tsup && node dist/index.mjs",
		"build": "tsup",
		"lint": "eslint .",
		"format": "prettier --write ."
	},
	"bin": {
		"astro-eslint-setup": "dist/index.mjs"
	},
	"files": [
		"dist/**/*"
	],
	"keywords": [
		"eslint",
		"astro",
		"eslint-config"
	],
	"homepage": "https://github.com/danielz0102/astro-eslint-setup",
	"author": "danielz0102",
	"license": "ISC",
	"packageManager": "pnpm@10.15.0",
	"devDependencies": {
		"@eslint/js": "^9.34.0",
		"@types/node": "24.3.0",
		"eslint": "9.34.0",
		"globals": "^16.3.0",
		"jiti": "^2.5.1",
		"prettier": "^3.6.2",
		"tsup": "8.5.0",
		"typescript": "5.9.2",
		"typescript-eslint": "^8.40.0"
	},
	"dependencies": {
		"@clack/prompts": "0.11.0"
	}
}
